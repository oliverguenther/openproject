<%= toolbar title: t('bim.bcf.import') %>

<%= form_tag({ action: :perform_import }, method: :post) do %>

  <div class="form--field">
    <%= styled_label_tag 'bcf_file', t('bim.bcf.xml_file') %>
    <div class="form--field-container">
      <%= styled_file_field_tag 'bcf_file' %>
    </div>
  </div>

  <%= submit_tag t(:label_import), class: 'button -highlight' %>
  <%= link_to t(:button_cancel),
              { action: :index },
              class: 'button' %>
<% end %>
